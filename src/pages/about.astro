---
import Main from "../layouts/Main.astro";
import hashnode from "../images/hashnode.svg";
import linkedin from "../images/linkedin.svg";
import github from "../images/github.svg";
import Button from "../components/Button.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>AlSpace</title>
  </head>
  <body>
    <Main
      pageTitle="I am a software engineering apprentice."
      pageCaption="Here to share my experience."
    >
      <div
        class="container rounded-lg w-full bg-[url('/src/images/dark-multi-v.png')] bg-no-repeat bg-cover w-full lg:w-1/2 flex flex-col justify-center gap-5 items-center p-2 py-5 lg:p-14"
      >
        <Button
          caption="Read my articles on hashnode."
          image={hashnode}
          link="https://hashnode.com/@al789"
        />
        <Button
          caption="Checkout my other projects."
          image={github}
          link="https://github.com/mouhamadalmounayar"
        />
        <Button
          caption="Let's connect"
          image={linkedin}
          link="https://www.linkedin.com/in/mouhamad-al-mounayar-00b7b5293/"
        />
      </div>
    </Main>
  </body>
</html>
