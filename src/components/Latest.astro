---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
type Props = {
  image: ImageMetadata;
  blogTitle: string;
  blogDate: string;
  blogCategory: ImageMetadata;
};
const props: Props = Astro.props;
---

<div
  class="flex flex-col gap-3 bg-slate-50 rounded-[5px] lg:rounded-[12px] lg:flex-row lg:justify-between max-w-full sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl"
>
  <div class="relative lg:w-[700px]">
    <Image
      src={props.image}
      class="rounded-t-[5px] lg:rounded-t-none lg:rounded-tl-[12px] lg:rounded-bl-[12px] h-full"
      alt=""
    />
    <Image
      src={props.blogCategory}
      class="absolute inset-0 top-1/2 w-[50px] transform -translate-x-1/2 text-white -translate-y-1/2 left-1/2"
      alt=""
    />
  </div>
  <div
    class="flex flex-col gap-3 p-7 items-start justify-center lg:w-[700px] border-blue-500 lg:p-28"
  >
    <div class="lg:text-4xl text-slate-800 font-bold text-xl">
      {props.blogTitle}
    </div>
    <div class="text-slate-400 text-[12px] font-bold lg:text-xl">
      {props.blogDate}
    </div>
  </div>
</div>
