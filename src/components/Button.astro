---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
type Props = {
  caption: string;
  image: ImageMetadata;
  link: string;
};

const { caption, image, link } = Astro.props;
---

<a
  href={link}
  class="text-white cursor-pointer hover:border-blue-500 transition-all text-sm w-full lg:w-1/2 px-10 p-5 rounded-md border border-white flex flex-row-reverse justify-around gap-5 items-center"
>
  <p class="flex flex-row justify-start w-5/6">
    {caption}
  </p>
  <Image src={image} alt="" class="w-[40px] h-[40px]" />
</a>
